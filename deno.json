{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
  "tasks": {
    "build": "deno --allow-read --allow-write --allow-env index.tsx",
    "build:css": "deno run -A npm:sass main.scss main.css --no-source-map"
  },
  "imports": {
    "hono": "npm:hono@^4.8.5"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 160,
    "proseWrap": "preserve",
    "semiColons": true,
    "singleQuote": true,
    "useTabs": false
  },
  "lint": {
    "rules": {
      "exclude": ["jsx-key"]
    }
  }
}
